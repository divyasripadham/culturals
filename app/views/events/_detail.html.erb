<div>
  <% if @events && (@events.length != 0) %>
    <table class="table table-striped">
      <tr>
       <th>Event Name</th>
       <th>Start Date</th>
       <th>End Date</th>
       <th>Organizer</th>
       <th>Event Type</th>
       <th>Official Site</th>
      </tr>
      <% if @events.each do |event| %>
        <tr>
          <td><%= link_to event.name, event_path(event.id) %></td>
          <td><%= event.startdate.strftime("%b %d, %Y %H:%M") %></td>
          <td><%= event.enddate.strftime("%b %d, %Y %H:%M") %></td>
          <td><%= event.address_temp %></td>
          <td><%= event.event_type %></td>
          <td><a href="<%= event.url %>" target="_blank"><img border="0" alt="site url" src="assets/Info.png" width="10" height="10"></a></td>
        </tr>
      <% end.empty? %>
        No events
      <% end %>
    </table>
  <% end %>
</div>
