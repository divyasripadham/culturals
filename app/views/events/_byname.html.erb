<div id="byname">
  <h3>Events by Name</h3>
  <div>
    <%= form_tag(events_path, :method => "get", id: "search-form") do %>
    <%= text_field_tag :search, params[:search], placeholder: "Enter event name" %>
    <%= hidden_field_tag "efilter1", "eventsbyname" %>
    <%= submit_tag "Search" %>
    <% end %>
    <br>
    <%= radio_button_tag(:byname, "byname_upcoming") %>
    <%= label_tag(:byname_upcoming, "Upcoming") %>
    <%= radio_button_tag(:byname, "byname_all") %>
    <%= label_tag(:byname_all, "All") %>
  </div>
  <%= render partial: "events/detail", locals: { events: @events } %>
</div>
