<h4>Edit new Event</h4>
<div class="row">
  <div class="col-md-4">
    <p>Guidelines for events:</p>
    <ul>
      <li>Please provide a valid website with information regarding event</li>
      <li>Please provide contact details in your website</li>
    </ul>
  </div>
</div>
<div class="row">
  <div class="col-md-2">
  </div>
  <div class="col-md-6">
    <%= form_for @event do |f| %>
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control', placeholder: "Enter event name" %>
      </div>
      <div class="form-group">
        <%= f.label :college %>
        <%= f.collection_select :college_id, College.all, :id, :name %>
      </div>
      <div class="form-group">
        <%= f.label :startdate %>
        <%= f.date_select(:startdate,:start_year => 1990) %>
      </div>
      <div class="form-group">
        <%= f.label :enddate %>
        <%= f.date_select(:enddate,:start_year => 1990) %>
      </div>
      <div class="form-group">
        <%= f.label :officialsite %>
        <%= f.text_field :url, class: 'form-control', placeholder: "Enter official website" %>
      </div>
      <div class="form-group">
        <%= f.label :description %>
        <%= f.text_area :description, class: 'form-control', placeholder: "Enter description" %>
      </div>
      <%= f.submit "Save", class: 'btn btn-success' %>
    <% end %>
  </div>
</div>
