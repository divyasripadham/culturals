<br>
<div>
  <div class="right">
    <%= link_to "Register Event", new_event_path, class: 'btn btn-default' %>
    <%= link_to "Add Event Video", videos_new_path, class: 'btn btn-default' %>
  </div>
</div>
<div class="pad">
  <div class="tab_bg">
    <ul class="nav nav-tabs pad">
      <li class="active menu_tab"><a data-toggle="tab" href="#allupcoming">All Upcoming Events</a></li>
      <li class="menu_tab"><a data-toggle="tab" href="#bycollege">Events by College</a></li>
      <li class="menu_tab"><a data-toggle="tab" href="#bycity">Events by City</a></li>
      <li class="menu_tab"><a data-toggle="tab" href="#bytype">Events by Type</a></li>
    </ul>
  </div>
  <br>
  <div class="tab-content">
    <div id="allupcoming" class="tab-pane fade in active">
      <table class="table table-striped">
        <tr>
         <th>Event Name</th>
         <th>Start Date</th>
         <th>End Date</th>
         <th>College Name</th>
         <th>Event Type</th>
         <th>Event URL</th>
        </tr>
        <% @events.each do |event| %>
          <tr>
            <td><%= link_to event.name, event_path(event.id) %></td>
            <td><%= event.startdate.strftime("%b %d, %Y %H:%M") %></td>
            <td><%= event.enddate.strftime("%b %d, %Y %H:%M") %></td>
            <td><%= event.college.name %></td>
            <td><%= event.event_type %></td>
            <td><a href="<%= event.url %>" target="_blank"><img border="0" alt="site url" src="assets/images/Info.png" width="10" height="10"></td>
          </tr>
        <% end %>
      </table>
    </div>
    <div id="bycollege" class="tab-pane fade">
      <h3>Search by college name</h3>
      <br>
      <div>
        <%= form_tag(events_path, :method => "get", id: "search-form") do %>
        <%= text_field_tag :search, params[:search], placeholder: "Enter college name" %>
        <%= submit_tag "Search" %>
        <% end %>
        <br>
        <%= radio_button_tag(:byname, "byname_upcoming") %>
        <%= label_tag(:byname_upcoming, "Upcoming") %>
        <%= radio_button_tag(:byname, "byname_all") %>
        <%= label_tag(:byname_all, "All") %>
      </div>
    </div>
    <div id="bycity" class="tab-pane fade">
      <h3>Menu 2</h3>
      <p>Some content in menu 2.</p>
    </div>
    <div id="bytype" class="tab-pane fade">
      <h3>Menu 3</h3>
      <p>Some content in menu 1.</p>
    </div>
  </div>
</div>
