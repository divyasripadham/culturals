<h4>Event Details</h4>

<form>
  <div class="form-group">
      <label>Name:</label>
      <label><%= @event.name %></label>
  </div>
  <div class="form-group">
      <label>College:</label>
      <label><%= @event.college.name %>, <%= @event.college.address1 %>, <%= @event.college.city %>, <%= @event.college.state %></label>
  </div>
  <div class="form-group">
      <label>Start date:</label>
      <label><%= @event.startdate %></label>
  </div>
  <div class="form-group">
      <label>End date:</label>
      <label><%= @event.enddate %></label>
  </div>
  <div class="form-group">
      <label>Event Type:</label>
      <label><%= @event.event_type %></label>
  </div>
  <div class="form-group">
      <label>Official site:</label>
      <a href="<%= @event.url %>" target="_blank"><%= @event.url %></a>
  </div>
  <div class="form-group">
      <label>Description:</label>
      <label><%= @event.description %></label>
  </div>
</form>
<div class="row">

    <div class="col-md-1">
      <%= link_to "Edit Event", edit_event_path, class: 'btn btn-primary' %>
    </div>

    <div class="col-md-1">
      <%= link_to "Delete Event", @event, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this event?' } %>
    </div>

</div>
