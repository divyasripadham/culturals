<form class="pad">
  <div class="form-group">
      <label>Name:</label>
      <label class="mild"><%= @event.name %></label>
  </div>
  <div class="form-group">
      <label>Organizer:</label>
      <label class="mild"><%= @event.organizer %></label>
  </div>
  <div class="form-group">
      <label>Location:</label>
      <label class="mild"><%= @event.location %></label>
  </div>
  <div class="form-group">
      <label>Start date:</label>
      <label class="mild"><%= @event.startdate.strftime("%b %d, %Y") %></label>
  </div>
  <div class="form-group">
      <label>End date:</label>
      <label class="mild"><%= @event.enddate.strftime("%b %d, %Y") %></label>
  </div>
  <!-- <div class="form-group">
      <label>Event Type:</label>
      <label><%= @event.event_type %></label>
  </div> -->
  <div class="form-group">
      <label>Contact Information:</label>
      <label class="mild"><%= @event.contact %></label>
  </div>
  <div class="form-group">
      <label>Event site:</label>
      <a href="<%= @event.url %>" target="_blank"><%= @event.url %></a>
  </div>
  <div class="form-group">
      <label>Details:</label>
      <label class="mild"><%= @event.description %></label>
  </div>
  <div class="form-group">
      <label>Organizer site:</label>
      <a href="<%= @event.college_url %>" target="_blank"><%= @event.college_url %></a>
  </div>
</form>
