<div>
  <div class="right">
    <%= link_to "Register Event", new_event_path, class: 'btn btn-default' %>
  </div>
</div>
<div class="container">
  <h3>Add a video</h3>
  <%= form_for @video do |f| %>
    <%= render 'shared/errors', object: @video %>
    <div class="form-group">
      <%= f.label :event %>
      <%= f.collection_select :event_id, Event.all, :id, :event_and_college, {:prompt => "Select an event"}, required: true %>
    </div>
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control', required: true %>
    </div>
    <div class="form-group">
      <%= f.label :Link %>
      <%= f.text_field :url, class: 'form-control', required: true %>
    </div>

    <%= f.submit class: 'btn btn-success' %>
  <% end %>
</div>
